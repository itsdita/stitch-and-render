<%- include ("../../shared/includes/head", {title: "Add new product"})%>
  </head>

  <body>
    <%- include ("../../shared/includes/header") %>
    
      <main>
        <section class="page-title">
          <h1>new product</h1>
        </section>
        <section>
          <div class="basic-container new-product">
            <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
              <div class="input-group">
                <label for="title">title</label>
                <input type="text" name="title" id="title" required>
              </div>
              <div class="input-group file">
                <label for="image">image</label>
                <input type="file" name="image" id="image" accept="image/png, image/jpg">
              </div>
              <div class="input-group">
                <label for="summary">summary</label>
                <input type="text" name="summary" id="summary" required maxlength="250">
              </div>
              <div class="input-group">
                <label for="description">description</label>
                <textarea name="description" id="description" rows = "7" required></textarea>
              </div>
              <div class="input-group">
                <label for="price">price</label>
                <input type="number" name="price" id="price" min="0.01" step="0.01" required>
              </div>
              <div class="input-group btns">
                <button type="reset" class="basic-btn">reset</button>
                <button type="submit" class="basic-btn">save</button>
            </form>
          </div>
        </section>
      </main>
      <%- include ("../../shared/includes/footer") %>
    

  </body>

  </html>