<%- include ("includes/head", {pageTitle: "Login!" })%>
  </head>

  <body>
    
    <%- include ("includes/header") %>

      <main>
        <section class="page-title">
          <h1>let's get to work!</h1>
        </section>

        <section>
          <div class="basic-container">
            <h2>log in</h2>
            <% if (inputData.hasError) {%>
              <P><%= inputData.message %></P>
            <% } %>
            <form action="/login" method="POST">
              <div class="input-group">
                <label for="email">email</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
              </div>
              <div class="input-group">
                <label for="password">password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" required>
              </div>
              <button id="login-btn" class="basic-btn" >login</button>
            </form>
            <p class="signup-link">doesn't have an account yet? <a href="/join">SIGN UP</a></p>
          </div>
        </section>
      </main>

      <%- include ("includes/footer") %>
    

  </body>

  </html>